package desvestandar;

import java.util.*;
public class Desvestandar {
    static double numero;
    static double media;
    static double varianza;
    static double desviacion;

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Cantidad de numeros a calcular: ");
        int n = sc.nextInt();
        //Array para alamacenar valores
        double numeros [ ] = new double [n];
        for(int i = 0; i<n;i++)
            {
               System.out.println("Ingrese el numero: ");
               numeros[i] = sc.nextDouble();
            }
        // Media
        double suma = 0;
        for (double i: numeros)
            {
               suma = suma + i;
            }
            media = suma / n;
        System.out.println("La Media es: "+ media);
        // Varianza
        double sumatoria;
        for (int i=0; i<n;i++)
            {
               sumatoria = Math.pow(numeros[i] - media, 2);
            varianza = varianza + sumatoria;
            }
            varianza = varianza / (n-1);
        System.out.println("La varianza es: "+ varianza);
         //Desviacion estandar
            desviacion = Math.sqrt(varianza);
            double redondeo = Math.rint(desviacion*100)/100; //Valor de la desviacion estandar con dos decimales
        System.out.println("La desviacion estandar es: "+redondeo);
         
         
    }
    
}
